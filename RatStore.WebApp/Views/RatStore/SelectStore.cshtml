@model RatStore.WebApp.Models.SelectStoreViewModel

@using RatStore.Logic;

@{
    ViewData["Title"] = "SelectStore";
}

<h1>Select New Preferred Store</h1>

<div>
    @foreach (Location location in Model.Locations)
    {
        <dl class="row">
            <dt class="col-sm-2">
                @location.Address
            </dt>
            <dd class="col-sm-10">
                @Html.ActionLink("Select...", "ChooseStore", new { id = location.LocationId })
            </dd>
        </dl>
    }
</div>
<div>
    <a asp-action="Index">Back to Home</a>
</div>
